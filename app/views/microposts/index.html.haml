%h1 
  Microposts for
  =@user ? @user.name : "All Users"

-@microposts.each do |micropost|
  .posts
    %h3=micropost.title
    =micropost.content
    by
    =link_to micropost.user.name, {controller: :users, action: :show_user_microposts, id: micropost.user.id}

    = link_to 'Show', micropost 
    = link_to 'Edit', edit_micropost_path(micropost) 
    = link_to 'Destroy', micropost, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br
= link_to 'New Micropost', new_micropost_path
=link_to 'Back', root_path
